rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }

    // CORRECTED: Claims are on request.auth.token
    function getTenantId() {
      return request.auth.token.tenantId;
    }

    function getUserRole() {
      return request.auth.token.role;
    }

    function userHasPermission(permission) {
      return permission in request.auth.token.permissions;
    }

    function isSameTenant(tenantId) {
      return getTenantId() == tenantId;
    }

    function isAdmin() {
      return getUserRole() == 'admin';
    }

    function isCreatingValidDoc() {
      return request.resource.data.tenantId == getTenantId();
    }

    // --- Tenant-level Access Control ---
    match /tenants/{tenantId} {

      // Metadata: Admin-only write, any tenant user can read
      match /metadata/{docId} {
        allow read: if isAuthenticated() && isSameTenant(tenantId);
        allow write: if isAdmin() && isCreatingValidDoc();
      }

      // Settings: Admin-only write, any tenant user can read
      match /settings/{docId} {
         allow read: if isAuthenticated() && isSameTenant(tenantId);
         allow write: if isAdmin() && isCreatingValidDoc();
      }

      // Staff: Admin can manage, users can read their own doc
      match /staff/{staffId} {
        allow read: if isAuthenticated() && isSameTenant(tenantId) && (isAdmin() || request.auth.uid == staffId);
        allow write: if isAdmin() && isCreatingValidDoc();
      }

      // Menu Items: Any tenant user can read, requires 'manage_menu' permission to write
      match /menu_items/{itemId} {
        allow read: if isAuthenticated() && isSameTenant(tenantId);
        allow write: if userHasPermission('manage_menu') && isCreatingValidDoc();
      }

      // Orders: Any tenant user can read, specific permissions for create/update
      match /orders/{orderId} {
        allow read: if isAuthenticated() && isSameTenant(tenantId);
        allow create: if userHasPermission('create_orders') && isCreatingValidDoc();
        allow update: if userHasPermission('update_orders');
        allow delete: if false;
      }

      // KOT Tickets: Any tenant user can read, kitchen-specific permissions to write
      match /kot_tickets/{kotId} {
        allow read: if isAuthenticated() && isSameTenant(tenantId);
        allow create: if userHasPermission('create_kot') && isCreatingValidDoc();
        allow update: if userHasPermission('update_kot');
      }

      // Inventory: Any tenant user can read, requires 'manage_inventory' permission to write
      match /inventory/{inventoryId} {
        allow read: if isAuthenticated() && isSameTenant(tenantId);
        allow write: if userHasPermission('manage_inventory') && isCreatingValidDoc();
      }

      // Customers: Any tenant user can read, requires 'manage_customers' permission to write
      match /customers/{customerId} {
        allow read: if isAuthenticated() && isSameTenant(tenantId);
        allow write: if userHasPermission('manage_customers') && isCreatingValidDoc();
      }

      // Billing: Billing role or admin can read, specific create permission
      match /billing/{billId} {
        allow read: if isAuthenticated() && isSameTenant(tenantId) && (isAdmin() || getUserRole() == 'billing');
        allow create: if userHasPermission('create_billing') && isCreatingValidDoc();
        allow update: if false; // Bills are immutable
      }

      // Payments: Billing role or admin can read, specific process permission
      match /payments/{paymentId} {
        allow read: if isAuthenticated() && isSameTenant(tenantId) && (isAdmin() || getUserRole() == 'billing');
        allow write: if userHasPermission('process_payments') && isCreatingValidDoc();
      }

      // Audit Logs: Admin-read only, no client writes
      match /audit_logs/{logId} {
        allow read: if isAdmin() && isSameTenant(tenantId);
        allow write: if false;
      }

      // Default deny all other sub-collections
      match /{document=**} {
        allow read, write: if false;
      }
    }
  }
}