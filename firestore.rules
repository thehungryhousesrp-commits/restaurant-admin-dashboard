rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role by looking up the user's role in the 'users' collection.
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Default security: Deny all reads and writes unless explicitly allowed.
    match /{document=**} {
      allow read, write: if false;
    }

    // --- Public & Admin Rules ---

    // Menu items can be read by anyone, but only written by admins.
    match /menu-items/{itemId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Categories can be read by anyone, but only written by admins.
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- Order Rules ---

    match /orders/{orderId} {
      // ANY logged-in user (staff/admin) can create a new order.
      allow create: if request.auth != null;
      
      // ANYONE can read a single invoice if they have the direct link. This is for the public invoice page.
      allow get: if true; 

      // ONLY ADMINS can list all orders, update, or delete them.
      // The 'list' permission is crucial for the admin dashboard query.
      allow list, update, delete: if isAdmin();
    }

    // --- User Role Management Rules ---

    // Admins can read and write user roles.
    // Individual users can read their own role document.
    match /users/{userId} {
      allow read, write: if isAdmin() || request.auth.uid == userId;
    }
  }
}
