
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for User profiles
    match /users/{userId} {
      // Only the user themselves can write to their own document.
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // Rules for Menu Items
    match /menu-items/{itemId} {
      // Anyone can view the menu.
      allow get, list: if true;
      // Only authenticated users can create, update, or delete menu items.
      allow create, update, delete: if isSignedIn();
    }

    // Rules for Categories
    match /categories/{categoryId} {
      // Anyone can view categories.
      allow get, list: if true;
      // Only authenticated users can create, update, or delete categories.
      allow create, update, delete: if isSignedIn();
    }

    // Rules for Tables
    match /tables/{tableId} {
      // Anyone can view the list of tables and their status.
      allow get, list: if true;
      // Anyone can update a table's status (e.g., to 'occupied').
      allow update: if true;
      // Only authenticated users can create or delete tables.
      allow create, delete: if isSignedIn();
    }

    // Rules for Orders
    match /orders/{orderId} {
        // Anyone can create an order (place an order).
        allow create: if true;
        // Only authenticated users can view, update or delete orders.
        allow get, list, update, delete: if isSignedIn();
    }
  }
}
