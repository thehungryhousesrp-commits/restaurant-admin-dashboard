rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all to prevent unsecured access, must be explicitly allowed.
    match /{document=**} {
      allow read, write: if false;
    }

    // MENU AND CATEGORIES: Admins (authenticated) can read/write
    match /menu-items/{itemId} {
      allow read, write: if request.auth != null;
    }
    match /categories/{categoryId} {
      allow read, write: if request.auth != null;
    }

    // ORDERS: Anyone can read an order (for public invoice links), but only admins can create/update/delete.
    match /orders/{orderId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // BRAND ASSET: Anyone can read the logo, but only admins can change it.
    // The collection name "Brand Asset" must be in single quotes because it contains a space.
    match /'Brand Asset'/{assetId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
