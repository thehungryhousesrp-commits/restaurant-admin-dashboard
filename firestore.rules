rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role by checking the user's unique ID (UID).
    function isAdmin() {
      // The UID '8kkXdYsoX5MsRlv371w1e6i8qQh2' corresponds to the admin user.
      return request.auth.uid == '8kkXdYsoX5MsRlv371w1e6i8qQh2';
    }

    // --- Public & Admin Rules ---

    // Menu items can be read by anyone, but only written by the admin.
    match /menu-items/{itemId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Categories can be read by anyone, but only written by the admin.
    match /categories/{categoryId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // --- Order Rules ---

    match /orders/{orderId} {
      // ANY logged-in user can create a new order.
      allow create: if request.auth != null;
      
      // ANYONE can read a single invoice if they have the direct link.
      allow get: if true; 

      // ONLY THE ADMIN can list all orders, update, or delete them.
      allow list, update, delete: if isAdmin();
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
