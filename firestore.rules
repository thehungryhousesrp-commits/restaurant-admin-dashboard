rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all to prevent unsecured access
    match /{document=**} {
      allow read, write: if false;
    }

    // MENU AND CATEGORIES: Admins (authenticated) can read/write
    match /menu-items/{itemId} {
      allow read, write: if request.auth != null;
    }
    match /categories/{categoryId} {
      allow read, write: if request.auth != null;
    }

    // ORDERS: Anyone can read an order (for public invoice links),
    // but only admins (authenticated) can create, update, or delete.
    match /orders/{orderId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // BRAND ASSET: Anyone can read the logo,
    // but only admins (authenticated) can write/update it.
    match /"Brand Asset"/{assetId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
