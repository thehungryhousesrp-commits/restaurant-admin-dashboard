
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for the `users` collection
    match /users/{userId} {
      // A user can read their own document.
      allow get: if isSignedIn() && request.auth.uid == userId;
      // A user can update their own document (e.g., to change activeRestaurantId).
      allow update: if isSignedIn() && request.auth.uid == userId;
      // Users can only be created as part of the signup flow.
      allow create: if isSignedIn() && request.auth.uid == userId;
    }

    // Rules for the `restaurants` collection
    match /restaurants/{restaurantId} {
      // A restaurant document can only be created by a signed-in user who will be the owner.
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      // Only the owner of a restaurant can read or modify its main document.
      allow get, update: if isSignedIn() && get(/databases/$(database)/documents/restaurants/$(restaurantId)).data.ownerId == request.auth.uid;
    }
    
    // Rules for all sub-collections within a restaurant (e.g., menu-items, orders)
    match /restaurants/{restaurantId}/{document=**} {
      // To access any data within a restaurant, the user must be authenticated
      // and their UID must be present in a user document that contains the restaurantId
      // in its 'restaurantIds' array.
      allow read, write: if isSignedIn() 
        && restaurantId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.restaurantIds;
    }
  }
}
