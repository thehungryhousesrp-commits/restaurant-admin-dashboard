
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for the top-level `users` collection (if you have one for profiles)
    match /users/{userId} {
      // Only the user themselves can read or write to their own profile document.
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // Rules for the multi-tenant `restaurants` collection
    // This is the core of the multi-tenant security model.
    match /restaurants/{restaurantId}/{document=**} {
      // Allow read/write access only if the user is authenticated AND
      // their custom auth token contains a `restaurantId` claim that
      // matches the {restaurantId} in the path they are trying to access.
      //
      // In a more complex scenario with roles, you might check a list of restaurants:
      // allow read, write: if isSignedIn() && restaurantId in request.auth.token.restaurants;
      allow read, write: if isSignedIn() && request.auth.token.restaurantId == restaurantId;
    }

    // ======================================================================
    // The rules below are now obsolete because access is controlled by the
    // /restaurants/{restaurantId} rule above. Keeping them for reference,
    // but they will not be hit if all data is correctly nested.
    // ======================================================================

    match /menu-items/{itemId} {
      allow read, write: if false; // Should not be accessible at the root level
    }
    match /categories/{categoryId} {
      allow read, write: if false; // Should not be accessible at the root level
    }
    match /tables/{tableId} {
      allow read, write: if false; // Should not be accessible at the root level
    }
    match /orders/{orderId} {
      allow read, write: if false; // Should not be accessible at the root level
    }
  }
}
